/* pages/help/help.wxss */
page{
  background-color: #EFEFF4;
  color: #363636;
}
.help{
  width: 100%;
  margin-top: 30rpx;
  background-color: white
}
.help_tit{
  margin-top: 60rpx;
  margin-left: 30rpx;
  color: #9A9A9A;
  font-size: 24rpx;
}
.help_con{
  width: 100%;
  /* height: 100rpx; */
  
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.help_img{
  width: 50rpx;
  margin-left: 30rpx;
  height: 50rpx;
  margin-top: 25rpx;
  /* border: 1rpx solid black; */
}
.help_text{
  width: 85%;
  height: 100rpx;
  line-height:100rpx;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #353535; 
  /* border: 1rpx solid black; */
}
.help_problem{
  width: 50%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #F3F3F3;
  /* border: 1rpx solid black; */
}
.help_left{
  width: 80%;
  /* border: 1rpx solid black; */
}
.help_left_top{
  /* border: 1rpx solid black; */
  height: 60rpx;
  margin-left: 30rpx;
  line-height: 70rpx;
  width: 80%;
  color: #353535;
  font-size: 30rpx;
}
.help_left_bottom{
  height: 60rpx;
  margin-left: 30rpx;
  line-height: 50rpx;
  width: 100%;
  color: #B2B2B2;
  font-size: 26rpx;
}
.help_right{
  /* border: 1rpx solid black; */
  width: 20%;
}
.help_cons{
  background-color: white;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 30rpx;
  color: #353535;
  font-size: 30rpx;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
}
